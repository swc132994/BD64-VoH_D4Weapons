script "ShotgunCooldownCheck" (void)
{
	If(CheckInventory("BurstFireCooldownActivator"))
	{
	delay(1000);
	TakeInventory("BurstFireCooldownActivator",1);
	}
	else If(CheckInventory("ExplosiveCooldownActivator"))
	{
	delay(1000);
	TakeInventory("ExplosiveCooldownActivator",1);	
	}

}

script "SSGFireUpgradeCheck" (void)
{
	if(CheckInventory("SSGDoubleTrouble"))
	{
	GiveInventory("SSGCounter",1);
	TakeInventory("Shell",1);
	}
	else
	{
	GiveInventory("SSGCounter",2);
	TakeInventory("Shell",2);
	}	
}

